#!/bin/sh
set -e

RUBY_210=2.1.1
RUBY_193=1.9.3-p545
RUBY_187=1.8.7-p374

export RUBY_CONFIGURE_OPTS="--disable-install-doc"
echo "gem: --no-ri --no-rdoc" > /.gemrc

export MAKE_OPTS="-j2"

mkdir -p /opt/rubies

echo "Installing $RUBY_210"
/usr/local/bin/ruby-build $RUBY_210 /opt/rubies/$RUBY_210
PATH=/opt/rubies/$RUBY_210/bin gem install bundler

echo "Installing $RUBY_193"
/usr/local/bin/ruby-build $RUBY_193 /opt/rubies/$RUBY_193
PATH=/opt/rubies/$RUBY_193/bin gem install bundler rake

echo "Installing $RUBY_187"
/usr/local/bin/ruby-build $RUBY_187 /opt/rubies/$RUBY_187
PATH=/opt/rubies/$RUBY_187/bin gem install bundler rake
